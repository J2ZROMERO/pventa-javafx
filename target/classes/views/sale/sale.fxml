<AnchorPane fx:id="rootPane" prefHeight="623.0" prefWidth="1168.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.j2zromero.pointofsale.controllers.sale.SaleController">
    <children>
        <!-- Input for adding a product -->
        <TextField fx:id="txtProductCode" layoutX="20.0" layoutY="20.0" prefHeight="27.0" prefWidth="295.0" promptText="CÃ³digo del producto">
            <font><Font size="15.0" /></font>
        </TextField>
        <Button fx:id="btnAddproduct" layoutX="326.0" layoutY="17.0" onAction="#addProductToTable" prefHeight="40.0" prefWidth="40.0">
            <graphic>
                <ImageView fitHeight="26.0" fitWidth="104.0" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@../../img/add.png" /></image>
                </ImageView>
            </graphic>
        </Button>

        <!-- Sales Table -->
        <TableView fx:id="salesTable" layoutX="9.0" layoutY="66.0" prefHeight="344.0" prefWidth="1151.0">
            <columns>
                <!-- Column for product name -->
                <TableColumn fx:id="productNameColumn" prefWidth="184.0" text="Producto" />
                <TableColumn fx:id="availableColumn" prefWidth="192.0" text="Disponible" />
                <TableColumn fx:id="unitMeasurementColumn" prefWidth="90.0" text="Unidad" />
                <!-- Column for unit price -->
                <TableColumn fx:id="unitPriceColumn" prefWidth="157.0" text="Precio" />
                <!-- Column for sold amount -->
                <TableColumn fx:id="quantityColumn" prefWidth="148.0" text="Cantidad" />
                <TableColumn fx:id="discountColumn" prefWidth="133.0" text="Descuento" />
                <!-- Column for total sold -->
                <TableColumn fx:id="totalSoldColumn" prefWidth="152.0" text="Total" />
                <TableColumn fx:id="actionsColumn" prefWidth="94.0" text="Acciones" />
            </columns>
        </TableView>

        <!-- Button to remove selected row -->
        <Button fx:id="btnRemoveRow" layoutX="20.0" layoutY="421.0" prefHeight="40.0" prefWidth="40.0">
            <graphic>
                <ImageView fitHeight="29.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@../../img/delete.png" /></image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnGenerateSell" layoutX="137.0" layoutY="421.0" onAction="#AddSale" prefHeight="40.0" prefWidth="40.0">
            <graphic>
                <ImageView fitHeight="51.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@../../img/sale.png" /></image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnClearTable" layoutX="74.0" layoutY="422.0" prefHeight="40.0" prefWidth="40.0">
            <graphic>
                <ImageView fitHeight="45.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@../../img/clean.png" /></image>
                </ImageView>
            </graphic>
        </Button>

        <AnchorPane layoutX="184.0" layoutY="421.0" prefHeight="178.0" prefWidth="140.0">
            <children>
                <TextField fx:id="txtReceived" layoutX="585.0" layoutY="57.0" prefHeight="31.0" prefWidth="148.0">
                    <font><Font size="18.0" /></font>
                </TextField>
                <Label layoutX="510.0" layoutY="62.0" prefHeight="31.0" prefWidth="78.0" text="Paga">
                    <font><Font size="15.0" /></font>
                </Label>
                <Label layoutX="509.0" layoutY="122.0" prefHeight="31.0" prefWidth="70.0" text="Cambio">
                    <font><Font size="15.0" /></font>
                </Label>
                <Label layoutX="768.0" layoutY="120.0" prefHeight="31.0" prefWidth="62.0" text="Total">
                    <font><Font size="14.0" /></font>
                </Label>
                <TextField fx:id="txtPay" layoutX="585.0" layoutY="111.0" prefHeight="37.0" prefWidth="148.0">
                    <font><Font size="18.0" /></font>
                </TextField>
                <TextField fx:id="txtTotal" editable="false" layoutX="858.0" layoutY="114.0" prefHeight="31.0" prefWidth="119.0">
                    <font><Font size="18.0" /></font>
                </TextField>
                <Label layoutX="766.0" layoutY="62.0" prefHeight="31.0" prefWidth="92.0" text="Descuento">
                    <font><Font size="15.0" /></font>
                </Label>
                <TextField fx:id="txtDiscount" layoutX="859.0" layoutY="56.0" prefHeight="31.0" prefWidth="119.0">
                    <font><Font size="18.0" /></font>
                </TextField>
                <Label layoutX="766.0" layoutY="6.0" prefHeight="31.0" prefWidth="92.0" text="Subtotal">
                    <font><Font size="15.0" /></font>
                </Label>
                <TextField fx:id="txtSubtotal" editable="false" layoutX="859.0" prefHeight="31.0" prefWidth="119.0">
                    <font><Font size="18.0" /></font>
                </TextField>
                <Label layoutX="459.0" layoutY="3.0" prefHeight="31.0" prefWidth="128.0" text="Metodo de pago">
                    <font><Font size="15.0" /></font>
                </Label>
                <ComboBox fx:id="cbxPaymentMethod" layoutX="584.0" layoutY="7.0" prefHeight="26.0" prefWidth="148.0" />
            </children>
        </AnchorPane>
        <Label fx:id="lblTerminal" layoutX="997.0" layoutY="36.0" prefHeight="26.0" prefWidth="157.0" text="Terminal 1" />
        <Label fx:id="lblCashier" layoutX="996.0" layoutY="12.0" prefHeight="26.0" prefWidth="157.0" text="Cajero User" />
    </children>
</AnchorPane>
