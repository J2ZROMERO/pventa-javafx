<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPrinter" maxWidth="352.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.j2zromero.pointofsale.controllers.printer.PrinterController">
        <children>
      <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox spacing="15.0">
               <children>
                  <VBox>
                     <children>
                                <Label text="Impresora">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                                <ComboBox fx:id="cbxPrinter" prefHeight="35.0" prefWidth="346.0" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Nombre de la empresa">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtName" prefHeight="35.0" prefWidth="346.0">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Direccion">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtAddress">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0">
                     <children>
                                <Label prefHeight="30.0" prefWidth="270.0" text="Notas sobre la impresora">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                                <TextArea fx:id="txtNotes" prefHeight="138.0" prefWidth="346.0">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </TextArea>
                     </children>
                  </VBox>
                  <HBox style="-fx-alignment: center-right;">
                     <children>
                        <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#onAddPrinter" prefHeight="50.0" prefWidth="50.0">
                           <font>
                              <Font size="20.0" />
                           </font>
                           <graphic>
                              <ImageView fitHeight="27.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../img/update.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </StackPane>
        </children>
</AnchorPane>
